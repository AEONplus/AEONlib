    """This is completely generated at runtime via configdb stuff"""
    {% for key, values in ctx.optical_elements.items() %}
    {{ key }}: Literal[{% for v in values %}"{{ v['code'] }}"{% if not loop.last %}, {% endif %}{% endfor %}]
    {% endfor %}
    optical_element_fields: ClassVar[list[str]] = [{% for key in ctx.optical_elements.keys() %}"{{ key }}"{% if not loop.last %}, {% endif %}{% endfor %}]




